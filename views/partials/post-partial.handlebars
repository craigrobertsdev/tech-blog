<div class="row mb-4">
  <div class="col">
    <div class="card bg-dark">
      <div class="card-body">
        <a
          class="bg-dark text-info d-flex justify-content-between align-items-center text-decoration-none post"
          href="/post/{{id}}"
        >
          <h4>{{title}}</h4>
          <span>Posted by
            {{user.name}}
            on
            {{format_date date_created}}</span>
        </a>

        <div class="card-text fs-5 text-white">{{content}}</div>
      </div>
    </div>

    <div class="add-comment d-none">
      <form id="create-comment" class="form-control">
        <label for="comment-title" class="form-label">Title</label>
        <input class="form-control" id="comment-title" />
        <label for="comment-content" class="form-label">Title</label>
        <textarea class="form-control" id="comment-content"></textarea>
        <button type="submit" class="btn btn-primary">Post comment</button>
      </form>
    </div>
    <button class="toggle-comment btn btn-primary mt-1">Add comment</button>
  </div>
</div>