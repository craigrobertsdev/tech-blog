<!-- Loop over each object in the projects array -->
{{#each posts as |post|}}
  <a
    class="bg-dark text-info d-flex justify-content-between align-items-center text-decoration-none mb-4 post"
    href="/post/{{id}}"
  >
    <div class="col">
      <div class="card bg-dark">
        <div class="card-body">
          <div
            class="bg-dark text-info d-flex justify-content-between align-items-center"
          >
            <h4>{{post.title}}</h4>
            <span>{{post.user.name}}
              {{format_date post.date_created}}</span>
          </div>

          <div class="card-text fs-5 text-white">{{post.content}}</div>
        </div>
      </div>
    </div>
  </a>
{{/each}}